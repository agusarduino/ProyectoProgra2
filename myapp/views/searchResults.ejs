<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head.ejs') %>

	<body>
		<!-- Header -->
		<% if (locals.user !=undefined) { %>
			<%- include('./partials/headerLogueado') %>
				<% } else { %>
					<%- include('./partials/header') %>
						<% } %>
							<!-- /Header -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Resultados de búsqueda</h2>
									</div>
								</div>

								<% if (producto.length===0) { %>
									<h3>No hay resultados para su criterio de búsqueda.</h3>
									<% } else { %>
										<% for (let i=0; i < producto.length; i++) { %>
											<div class="col-12 col-sm-6 col-lg-3">
												<section class="product-box">
													<a href="/product/detalleproducto/<%= producto[i].id %>">
														<figure class="product-box_image">
															<img src="/images/products/<%= producto[i].urlImagen %>"
																alt="">
														</figure>
														<article class="product-box_data">
															<h2>
																<%= producto[i].nombre %>
															</h2>
															<p>
																<%= producto[i].descripcion %>
															</p>
															<p>Comentarios: 12</p>
															<p>Cargado por: <a
																href="/users/perfil/<%= producto[i].usuario.id%>">
																<%= producto[i].usuario.nombre %> <%= producto[i].usuario.apellido %>
															</a></p></p>
														</article>
													</a>
												</section>
											</div>
											<% } %>
												<% } %>
							</div>




							<!-- footer -->
							<%- include('partials/footer.ejs') %>
							<!-- /footer -->
	</body>

</html>