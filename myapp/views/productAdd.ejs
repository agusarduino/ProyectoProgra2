<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="../stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="../stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="form" action="/agregarProducto" method="POST">
				<div>
					<label class="form-label">Ingrese el nombre de la imagen</label>
					<input id="urlImagen" class="form-input" type="text" name="urlImagen" placeholder="Url Imagen" />
				</div>
			
				<br>
			
				<div>
					<label class="form-label">Ingrese el nombre del producto</label>
					<input id="nombre" class="form-input" type="text" name="nombre" placeholder="Nombre" />
				</div>
			
				<br>
			
				<div>
					<label class="form-label">Ingrese la descripción del producto</label>
					<input id="descripcion" class="form-input" type="text" name="descripcion" placeholder="Descripción"/>
				</div>
			
				<br>
			
				<button type="submit" class="form-input">Agregar</button>
			</form>
	</div>

	<!-- footer -->
	<%- include('partials/footer.ejs')  %>
	<!-- /footer -->
</body>

</html>